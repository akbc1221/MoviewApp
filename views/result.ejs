<%- include("./partials/header")%>
<style>
  .img-responsive {
  width: auto;
  height: 450px;
}
</style>
      <div class="container ">
        <% if(movies.Response==='False'){%>
            <h2>Error! Movie not found</h2>
        <%}else{%>
            <div class="row">
                <% movies['Search'].forEach(function(movie){%>
                    <div class="card mt-2 ml-md-2" style="width: 18rem;">
                        <img class="card-img-top img-responsive" src="<%=movie.Poster%>" alt="image missing"
                        onerror="this.onerror=null; this.src='./public/assets/error.png';">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%=movie.Title%></h5>
                            <p class="card-text mt-auto"><i>Featured on: <%=movie.Year%></i></p>
                            <a href="/result/<%=movie.imdbID%>" class="btn btn-success mt-auto" target="_blank">More info</a>
                        </div>
                    </div>
                <%})%>
            </div>
        <%}%>
      </div>
    <%- include("./partials/footer")%>