<%- include("./partials/header")%>
    <style>
        
        .carousel-inner img {
            display: block;
            opacity: 0.9;
            height: 400px;
            line-height: 1;
            margin:auto;
            width: 450px;
            border-radius: 12px; 
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
        .form-control::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
            color: rgb(202, 196, 196);
            opacity: 1; /* Firefox */
        }

        .form-control:-ms-input-placeholder { /* Internet Explorer 10-11 */
                    color: rgb(202, 196, 196);
        }

        .form-control::-ms-input-placeholder { /* Microsoft Edge */
                    color: rgb(202, 196, 196);
        }
    </style>

    <div class="container col-md-6 col-lg-8 justify-content-center mt-4">

        <h2 style="color: whitesmoke; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Search your favourite movie</h2>
        <form class="pt-2" method="GET" action="/result">
            <div class="input-group">
                <input class="form-control form-control-lg rounded" type="search" placeholder="keyword..." aria-label="Search" name="movieName">
                <div class="input-group-btn">
                    <button class="btn-lg btn-secondary my-2 my-sm-0" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
        
        <!-- carousel -->
        <div class="row row-content mt-4">
            <div class="col">
                <div id="mycarousel" class="carousel slide pb-5 pt-1" data-ride="carousel">

                    <h3 style="color: rgba(221, 239, 245, 0.644); text-align: center;">Most watched</h3>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img id="img1" class="d-block img-fluid" src="" alt="1">
                        </div>
                        <div class="carousel-item">
                            <img id="img2" class="d-block img-fluid" src="" alt="2">
                        </div>
                        <div class="carousel-item">
                            <img id="img3" class="d-block img-fluid" src="" alt="3">
                        </div>
                        <div class="carousel-item">
                            <img id="img4" class="d-block img-fluid" src="" alt="4">
                        </div>
                        <div class="carousel-item">
                            <img id="img5" class="d-block img-fluid" src="" alt="5">
                        </div>
                    </div>

                    <!-- controls bottom -->
                    <ol class="carousel-indicators">
                        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#mycarousel" data-slide-to="1"></li>
                        <li data-target="#mycarousel" data-slide-to="2"></li>
                        <li data-target="#mycarousel" data-slide-to="3"></li>
                        <li data-target="#mycarousel" data-slide-to="4"></li>
                    </ol>
                    <!-- controls side -->
                    <a class="carousel-control-prev " href="#mycarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                    
                </div>
             </div>
        </div>
    </div>

    <script>
        var url1 = "https://m.media-amazon.com/images/M/MV5BMjMxNjY2MDU1OV5BMl5BanBnXkFtZTgwNzY1MTUwNTM@._V1_SX300.jpg";
        var url2 = "https://m.media-amazon.com/images/M/MV5BMTYwOTEwNjAzMl5BMl5BanBnXkFtZTcwODc5MTUwMw@@._V1_SX300.jpg";
        var url3 = "https://m.media-amazon.com/images/M/MV5BMTc5MDE2ODcwNV5BMl5BanBnXkFtZTgwMzI2NzQ2NzM@._V1_SX300.jpg";
        var url4 = "https://m.media-amazon.com/images/M/MV5BYThjYzcyYzItNTVjNy00NDk0LTgwMWQtYjMwNmNlNWJhMzMyXkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg";
        var url5 = "https://m.media-amazon.com/images/M/MV5BODBlOTJhZjItMGRmYS00YzM1LWFmZTktOTJmNDMyZTBjMjBkXkEyXkFqcGdeQXVyMjMwNDgzNjc@._V1_SX300.jpg";
        document.getElementById('img1').src = url1;
        document.getElementById('img2').src = url2;
        document.getElementById('img3').src = url3;
        document.getElementById('img4').src = url4;
        document.getElementById('img5').src = url5;
    </script>

<%- include("./partials/footer")%>
    